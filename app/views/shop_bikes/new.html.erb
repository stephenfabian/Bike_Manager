<%= form_with url: "/shops/#{@shop.id}/bikes", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :full_suspension %>
  <%= form.select :full_suspension, [TRUE, FALSE] %>
  
  <%= form.label :travel_length %>
  <%= form.text_field :travel_length %>

  <%= form.submit "Create Bike" %>
  <% end %> 