<%= link_to "Bike Index", "/bikes" %>
<%= link_to "Shop Index", "/shops" %>
<%= link_to "Add New Bike for #{@shop.name}", "/shops/#{@shop.id}/bikes/new" %>
<%= link_to "Sort Bikes Alphabetically", "/shops/#{@shop.id}/bikes" %>



<%@shop.bikes.each do |bike|%>
  <h1><%=bike.name%><h1>
  <p><%=bike.full_suspension%><p>
  <p><%=bike.travel_length%><p>
  <p><%=bike.shop_id%><p>
  <p><%=bike.created_at%><p>
  <p><%=bike.updated_at%><p>
<%end%>
